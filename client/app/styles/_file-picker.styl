.file-picker
  .files
    overflow   auto
    display    flex
    flex-wrap  wrap

    .file-item
        display          flex
        flex             none
        align-items      center
        margin           .25em 0.5em 0.25em 0
        padding          0.6em 0.8em
        background-color lighten(grey-01, 50%)
        border-radius    3px
        white-space      no-wrap

      a
        cursor  pointer
        padding 0
        color   grey-08

      .mime
        padding     0 0.4em 0 0
        font-size   1.25em
        color       grey-07

      .delete
        padding   0 0 0 0.4em
        cursor    pointer

      .file-size
        margin-left 0.5em
        color       grey-05

      .file-actions
          margin-left 0.5em
          border-left 1px solid grey-03

          a
              padding: 0 .5em

          a,
          i
            color grey-05

            &:hover
              color           grey-08
              text-decoration none

    .attachment-name
      color darkcolor

    .file-detail
      color     grey-05
      font-size 0.9em

  .dropzone
    width   20em
    padding 0.5em 0
    border  2px grey-03 dashed
    cursor  pointer
    color   grey-04

    i
      padding 0.5em

  .dropzone.target
    border-color basecolor

  .dropzone-wrapper
    position relative

  .dropzone-mask
    position absolute
    bottom 0
    width 100%
    height 100%
    border 2px solid transparent
    z-index 10



  .file-wrapper
    display none
