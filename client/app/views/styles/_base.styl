html,
body
    height 100%
    width 100%
    padding 0
    font-size 16px
    font-family 'Source Sans Pro', sans-serif !important // override Bootstrap

body
    text-rendering optimizeLegibility
    background grey-01

body,
input
    color darkgrey
    line-height 1.2

a,
a:visited,
a:focus
    color blue
    text-decoration none

    &:hover
        text-decoration underline

[aria-hidden=true]
    display none !important


/* fixing bootstrap */

body.modal-open, .modal-open .navbar-fixed-top, .modal-open .navbar-fixed-bottom
  margin-right 0

.modal
    position absolute
    margin-bottom 5em
    padding 0
    box-sizing border-box

textareahover,
input[type="text"]hover,
textareaactive,
input[type="text"]active,
textareafocus,
input[type="text"]focus
afocus,
.btnfocus
     outline0px !important
     -webkit-appearancenone

.well
    border-radius 0
    background white
    box-shadow none
    border 0

.btn
    border 0
    background blue
    color white
    text-transform uppercase
    box-shadow none
    text-shadow none
    border-radius 0
    border-radius 3px
    transition background 0.2s
    transition color 0.2s

    &:hover
        background darkblue
        border-color darkblue
        color white

    &:focus
        background blue
        color white

button,
.btn
    &.secondary
        background-color grey-05
        border-color     grey-05

        &:hover
            background-color grey-06
            border-color     grey-06

    &.danger
        background-color red
        border-color     red

        &:hover
            background-color darken(red, 20%)
            border-color     darken(red, 20%)

.button-group
    display flex

    button
        flex 1
        height auto
        margin 0 .5rem

        &:first-child
            margin-left 0

        &:last-child
            margin-right 0

.badge
    background grey-01

.badge-info
    background blue
    color white

.btnhover
.btnfocus
    color white
    background darkblue
    border-color darkblue
    text-shadow none

.form-horizontal
    .control-group
        margin-bottom 10px

    margin-bottom 0 !important

    .control-label
        font-size 13px
        width 100px
    .controls
        margin-left 120px

        .add-on i
            margin-top 2px !important

.info
    font-size 12px
    color grey-06

.datepicker
    z-index 1150

.showafter
.showbefore
    margin 1em 0

main
    box-sizing border-box
    border 0
    width auto
    background white

.container
    margin 0

input[type="date"]
  width 150px

input[type="time"]
  width 75px

.stick-bottom
    position fixed
    bottom 1em
